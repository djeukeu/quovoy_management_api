generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum LeadStatus {
  NEW
  ENGAGED
  PROPOSAL_SENT
  CLOSED_WON
  CLOSED_LOST
}

model Lead {
  id        String     @id @default(uuid())
  name      String
  email     String     @unique
  status    LeadStatus @default(NEW)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@map("lead")
}
